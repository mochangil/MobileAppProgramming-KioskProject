<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/radioGroup"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pattyBbqIcon"
            android:background="@drawable/bbqicon"
            android:button ="@null"
            android:layout_margin = "40dp"
            android:layout_marginLeft="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pattyChickenIcon"
            android:background="@drawable/chickenicon"
            android:button ="@null"
            android:layout_margin = "40dp"
            android:layout_marginLeft="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pattyEggIcon"
            android:background="@drawable/eggsaladicon"
            android:button ="@null"
            android:layout_margin = "40dp"
            android:layout_marginLeft="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pattyShrimpIcon"
            android:background="@drawable/shrimpicon"
            android:button ="@null"
            android:layout_margin = "40dp"
            android:layout_marginLeft="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pattySteakIcon"
            android:background="@drawable/steakicon"
            android:button ="@null"
            android:layout_margin = "40dp"
            android:layout_marginLeft="40dp"
            />


    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
