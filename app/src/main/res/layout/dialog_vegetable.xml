<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/radioGroup"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/lettuceIcon"
            android:background="@drawable/lettuceicon"
            android:button ="@null"
            android:layout_marginTop="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/onionIcon"
            android:background="@drawable/onionicon"
            android:button ="@null"
            android:layout_marginTop="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/pickleIcon"
            android:background="@drawable/pickleicon"
            android:button ="@null"
            android:layout_marginTop="40dp"
            />
        <RadioButton
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/tomatoIcon"
            android:background="@drawable/tomatoicon"
            android:button ="@null"
            android:layout_marginTop="40dp"
            />


    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>