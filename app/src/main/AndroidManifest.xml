<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kiosk">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kiosk"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminPassword"
            android:label="AdminPassword"/>
        <activity
            android:name=".AdminMenu"
            android:label="AdminMenu"/>
        <activity
            android:name=".InventoryTable"
            android:label="InventoryMenu"/>
        <activity
            android:name=".InventoryDialog"
            android:label="InventoryDialog"/>
        <activity
            android:name=".MenuManagementActivity"
            android:label="MenuManagementActivity"/>
        <activity
            android:name=".PaymentActivity"
            android:label="PaymentActivity"/>
        <activity
            android:name=".OrderPage"
            android:label="OrderPage"/>
        <activity
            android:name=".AddMenuDialog"
            android:label="AddMenuDialog"/>
    </application>

</manifest>